<% if @football.MultiChoice %>
  <form method="GET" action="#">
    <h4>
      <strong>Type: More Than One Correct</strong><br /><br />
      <strong>Question: </strong> <%= @football.question %><br /><br />  
      <%= check_box_tag(:A) %> <%= @football.o1 %></li><br /><br />
      <%= check_box_tag(:B) %> <%= @football.o2 %></li><br /><br />
      <%= check_box_tag(:C) %> <%= @football.o3 %></li><br /><br />
      <%= check_box_tag(:D) %> <%= @football.o4 %></li><br /><br />
    </h4>
<% else %>
  <form method="GET" action="#">
    <h4>
      <strong>Type: Single Correct</strong><br /><br />
      <strong>Question: </strong> <%= @football.question %><br /><br />  
      <input type="radio" name="ans" value="A"> <%= @football.o1 %><br /><br />
      <input type="radio" name="ans" value="B"> <%= @football.o2 %><br /><br />
      <input type="radio" name="ans" value="C"> <%= @football.o3 %><br /><br />
      <input type="radio" name="ans" value="D"> <%= @football.o4 %><br /><br />
    </h4>
<% end %>
<h3>Your Score is : <b><%= @lbd.Fscore %></b></h3>
